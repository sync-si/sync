{
    "compilerOptions": {
        "moduleResolution": "nodenext",
        "target": "esnext",
        "module": "nodenext",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
